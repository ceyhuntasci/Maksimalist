@{

    Layout = "~/Views/Shared/_MobileLayout.cshtml";
        List<Maksimalist.Models.Post> last3post = ViewBag.last3post;

}



    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '780985738613644',
                xfbml: true,
                version: 'v2.1'
            });
        };

        FB.ui({
            method: 'share_open_graph',
            action_type: 'og.likes',
            action_properties: JSON.stringify({
                object: 'https://developers.facebook.com/docs/',
            })
        }, function (response) { });

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/all.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

        $("#Selam").click(function () {
            fb.ui;
        });
    </script>
    <script>
        $(document).ready(function () {
            $("img").css("width", "");
            $("img").css("height", "");
            $("iframe").width(window.screen.availWidth);
     
        });
     
    </script>
    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/tr_TR/sdk.js#xfbml=1&appId=780985738613644&version=v2.0";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>


        <article id="post-1" class="post-1 post type-post status-publish format-standard has-post-thumbnail hentry category-fashion tag-music tag-video" itemscope itemtype="http://schema.org/Article">


            <div class="wrapper">
                <div class="grids">
                    <div class="grid-8 column-1">
                        <header class="wrapper entry-header page-header">


                            <div class="title-with-sep ruler-background single-title">
                                <h1 class="entry-title" itemprop="headline">@Model.Headline</h1>
                            </div>
                        </header>
                        @if (Model.HasVideo)
                        {@Html.Raw(@Model.VideoUrl)}



                        <div class="single-box clearfix entry-content" itemprop="articleBody">
                            @Html.Raw(@Model.Content)
                        </div>
                        <div class="single-box author-box single-author-box">
                            

                            <div class="author-tabs-content">
                                <div class="clearfix inner">

                                    <div id="author-bio">
                                        <div class="avatar">

                                            <img alt='@Model.Author.FirstName @Model.Author.LastName' src='@Model.Author.ProfilePicture' class='avatar avatar-70 photo' height='70' width='70' />

                                        </div><!-- .avatar -->
                                        <div class="author-info" itemprop="author" itemscope="itemscope" itemtype="http://schema.org/Person">
                                            <span class="vcard author">
                                                <span class="fn">

                                                    <span itemprop="name">@Model.Author.FirstName @Model.Author.LastName</span>

                                                </span>
                                            </span>
                                            <p itemprop="description">
                                             
                                            </p>
                                        </div><!-- .info -->
                                        <ul class="author-social">

                                            <li>
                                                <a class="twitter-link" href="@Model.Author.TwitterUrl">
                                                    Twitter
                                                </a>
                                            </li>

                                            <li>
                                                <a class="instagram-link" href="@Model.Author.InstagramUrl">
                                                    Instagram
                                                </a>
                                            </li>

                                            <li>
                                                <a class="pinterest-link" href="@Model.Author.Pinterest">
                                                    Pinterest
                                                </a>
                                            </li>


                                        </ul><!-- .author-social -->
                                    </div><!-- #author-bio -->
                            
                                 

                                </div>
                            </div>

                        </div>
                        <ul class="content-social">
                            <h4> PAYLAŞ!</h4>
                            <li class="facebook">
                                <a class="fb" href="http://www.facebook.com/sharer.php?u=@Request.Url.AbsoluteUri" target="_blank">
                                    <i class="icon-facebook"></i><span>Paylaş</span>
                                </a>
                            </li>
                            <li class="twitter">
                                <a href="https://twitter.com/intent/tweet?original_referer=@Request.Url.AbsoluteUri;text=@Model.Headline;tw_p=tweetbutton&amp;url=@Request.Url.AbsoluteUri" target="_blank">
                                    <i class="icon-twitter"></i><span>Tweet</span>
                                </a>
                            </li>
                        </ul>
                      

                        </div><!-- .grids -->

                    </div><!-- .wrapper -->
                </div>
        </article>



