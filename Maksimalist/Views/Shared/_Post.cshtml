﻿@model Maksimalist.Models.Post
    <article class="post-148 post type-post status-publish format-standard has-post-thumbnail hentry category-travel tag-black-n-white tag-nature tag-river grid-3">

        <figure class="entry-image">
            <a href="~/haber/@Model.Category.UrlSlug/@Model.SubCategory.UrlSlug/@Model.UrlSlug">
                <img width="270" height="180" src="@Model.ImageUrl" class="attachment-rectangle-size wp-post-image"/>@if (Model.HasGallery){<i class="icomoon-camera"></i>}
               
        
            </a>
        </figure>

        <header class="entry-header">
            <div class="entry-meta">
                <span class="entry-category"><a href="~/kategori/@Model.Category.UrlSlug">@Model.Category.Name</a></span><time class="entry-date updated" datetime="@Model.PostDate">@String.Format("{0:dd MMMM yyyy}", Model.PostDate)</time>
            </div>
            <h2 class="entry-title">
                <a href="~/haber/@Model.Category.UrlSlug/@Model.SubCategory.UrlSlug/@Model.UrlSlug">@Model.Headline</a>
            </h2>
            
        </header>

    </article>
