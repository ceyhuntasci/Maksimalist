@model Maksimalist.Models.RightNavViewModel
<div class="grid-4 column-2" style="width:310px; float: right">
    <aside class="sidebar" role="complementary" itemscope="" itemtype="http://schema.org/WPSideBar">
        <div id="ti_latest_reviews-2" class="widget widget_ti_latest_reviews">
            <h3>Reklam Alanı.</h3>
            <figure>
                <a class="entry-link" href="gallery-post-format/index.html"></a>
                <img width="330" height="220" src="@Model.Advert.Url" class="attachment-rectangle-size wp-post-image" alt="8470852074_4031c64512_o">
            </figure>
            <figure>
                <a class="entry-link" href="gallery-post-format/index.html"></a>
                <img width="330" height="220" src="@Model.Advert.Url" class="attachment-rectangle-size wp-post-image" alt="8470852074_4031c64512_o">
            </figure>

        </div><div id="ti_latest_posts-3" class="widget widget_ti_latest_posts">
            <h3>Popüler İçerikler</h3>
            <div class="widget-posts-entries">


                <ul class="clearfix">

                    @foreach (var i in Model.Posts)
                    {
                        <li>
                            <figure class="entry-image inview">
                                @if (i.HasGallery)
                                { <a href="~/haber/galeri/@i.Category.UrlSlug/@i.SubCategory.UrlSlug/@i.UrlSlug">
                                    <img width="330" height="220" src="@i.ImageUrl" class="attachment-rectangle-size wp-post-image">
                                </a>}
                                else
                                {  <a href="~/haber/@i.Category.UrlSlug/@i.SubCategory.UrlSlug/@i.UrlSlug">
                                    <img width="330" height="220" src="@i.ImageUrl" class="attachment-rectangle-size wp-post-image">
                                </a>}
                                
                            </figure>
                            @if (i.HasGallery)
                            { <span><a href="~/kategori/@i.Category.UrlSlug">@i.Category.Name</a></span><a class="widget-post-title" href="~/haber/galeri/@i.Category.UrlSlug/@i.SubCategory.UrlSlug/@i.UrlSlug">@i.Headline</a>
                            }
                            else
                            {  <span><a href="~/kategori/@i.Category.UrlSlug">@i.Category.Name</a></span><a class="widget-post-title" href="~/haber/@i.Category.UrlSlug/@i.SubCategory.UrlSlug/@i.UrlSlug">@i.Headline</a>
                            }
                             </li>
                    }
                  




                </ul>
            </div>

      

       
          
       

    
    </aside><!-- .sidebar -->
</div>